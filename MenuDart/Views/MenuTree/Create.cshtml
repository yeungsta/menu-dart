@model List<MenuDart.Models.MenuNode>

@{
    ViewBag.Title = "Create";
}

<h2>Add Category for @ViewBag.Restaurant: @ViewBag.Parent</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Category</legend>
        <div class="editor-label">
            @Html.LabelFor(model => model[0].Title)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model[0].Title)
            @Html.ValidationMessageFor(model => model[0].Title)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model[0].Link)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model[0].Link)
            @Html.ValidationMessageFor(model => model[0].Link)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model[0].Text)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model[0].Text)
            @Html.ValidationMessageFor(model => model[0].Text)
        </div>
        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to Menu", "Edit", "Menu", new { id = ViewBag.MenuId, parent = ViewBag.Parent }, null)
</div>
