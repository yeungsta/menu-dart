@{
    ViewBag.Title = "StartReset";
}

<div class="hero-unit">
<center><h1>Reset Password.</h1></center>
<br />
<br>
@using (Html.BeginForm("StartReset", "Account", FormMethod.Post, new { @class = "form-horizontal" }))
{ 
    @Html.ValidationSummary() 
        <fieldset>
            <div class="control-group">
                <label class="control-label">Email address:</label>
                <div class="controls">
                    @Html.TextBox("Email", null, new { @class = "input-xlarge", style = "width: 300px;" })
                    <span class="red">&nbsp;&nbsp;*</span> Required
                    <p class="help-block">A link to reset your password will be sent to your email.</p>
                </div>
            </div>
                                 
            <div class="form-actions">
                <button type="submit" value="Reset Password" class="btn btn-large btn-primary"><i class="icon-ok icon-white"></i> Reset</button>
                <a class="btn btn-large" href="@Url.Action("LogOn", "Account")"><i class="icon-remove"></i> Cancel</a>
            </div>  
        </fieldset>
}
</div> <!-- hero -->

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>