@model MenuDart.Models.ChangePasswordModel

@{
    ViewBag.Title = "Change Password";
}

<div class="hero-unit">
<center><h1>Change Password.</h1></center>
<br>
<p>

@using (Html.BeginForm("ChangePassword", "Account", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.ValidationSummary(true, "Password change was unsuccessful. Please correct the errors and try again.")
        <fieldset>
            <div class="control-group">
                <label class="control-label">@Html.LabelFor(m => m.OldPassword, "Current password")</label>
                <div class="controls">
                    @Html.PasswordFor(m => m.OldPassword, new { @class = "input-xlarge", style = "width: 300px;" })
                    @Html.ValidationMessageFor(m => m.OldPassword)
                    <p class="help-block">Required.</p>
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">@Html.LabelFor(m => m.NewPassword, "New password")</label>
                <div class="controls">
                    @Html.PasswordFor(m => m.NewPassword, new { @class = "input-xlarge", style = "width: 300px;" })
                    @Html.ValidationMessageFor(m => m.NewPassword)
                    <p class="help-block">Required.</p>
                </div>
            </div>
            <div class="control-group">
                <label class="control-label">@Html.LabelFor(m => m.ConfirmPassword, "Confirm new password")</label>
                <div class="controls">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "input-xlarge", style = "width: 300px;" })
                    @Html.ValidationMessageFor(m => m.ConfirmPassword)
                    <p class="help-block">Required.</p>
                </div>
            </div>
            <div class="form-actions">
                <button type="submit" value="Change Password" class="btn btn-large btn-primary"><i class="icon-ok icon-white"></i> Submit</button>
                <button class="btn btn-large"><i class="icon-remove"></i> Cancel</button>
            </div>
        </fieldset>
}
</div> <!-- hero -->

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

