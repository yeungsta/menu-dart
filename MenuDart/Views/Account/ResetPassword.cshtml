@model MenuDart.Models.ResetPasswordModel

@{
    ViewBag.Title = "Reset Password";
}

<div class="hero-unit">
<center>
<h1>Set a new password.</h1>
<h2>(For @Model.Email)</h2>
</center>
<br><br />

@using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.ValidationSummary(true, "Password change was unsuccessful. Please correct the errors and try again.")
        <fieldset>
            @Html.HiddenFor(model => model.Email)
            @Html.HiddenFor(model => model.Reset)
            @Html.HiddenFor(model => model.TempPassword)

            <div class="control-group">
                <label class="control-label">@Html.LabelFor(m => m.NewPassword, "New password")</label>
                <div class="controls">
                    @Html.PasswordFor(m => m.NewPassword, new { @class = "input-xlarge", style = "width: 300px;" })
                    @Html.ValidationMessageFor(m => m.NewPassword)
                </div>
            </div>

            <div class="control-group">
                <label class="control-label">@Html.LabelFor(m => m.ConfirmPassword, "Confirm new password")</label>
                <div class="controls">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "input-xlarge", style = "width: 300px;" })
                    @Html.ValidationMessageFor(m => m.ConfirmPassword)
                </div>
            </div>

            <div class="form-actions">
                <button type="submit" value="Set Password" class="btn btn-large btn-primary"><i class="icon-ok icon-white"></i> Set Password</button>
            </div> 
        </fieldset>
}
</div> <!-- hero -->

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
