@model IEnumerable<MenuDart.Models.Template>

@{
    ViewBag.Title = "Templates";
}

<h2>Templates (@Model.Count())</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<table>
<table class="table table-bordered table-striped table-hover">
<thead>
    <tr>
        <th>
            Name
        </th>
        <th>
            HdrTxtClr
        </th>
        <th>
            HdrTxtFnt
        </th>
        <th>
            HdrClrGrdntTop
        </th>
        <th>
            HdrClrGrdntBottom
        </th>
        <th>
            BkgndClr
        </th>
        <th>
            Stripes
        </th>
        <th>
            FtrTxtClr
        </th>
        <th>
            FtrLnkClr
        </th>
        <th></th>
    </tr>
</thead>
<tbody>
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HdrTxtClr)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HdrTxtFnt)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HdrClrGrdntTop)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HdrClrGrdntBottom)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BkgndClr)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Stripes)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FtrTxtClr)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FtrLnkClr)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ID })
        </td>
    </tr>
}
</tbody>
</table>
<p>
@Html.ActionLink("Back to Admin", "James", "Home")
