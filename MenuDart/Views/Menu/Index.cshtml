@model IEnumerable<MenuDart.Models.Menu>

@{
    ViewBag.Title = "Menus";
}

<h2>Menus (@Model.Count())</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table>
    <tr>
        <th>
            ID
        </th>
        <th>
            Name
        </th>
        <th>
            City
        </th>
        <th>
            Active
        </th>
        <th>
            MenuDartUrl
        </th>
        <th>
            Owner
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.City)
        </td>
        <td>
            @if (@item.Active) {
            <text>Yes</text>
            }
            else
            {
               <text>No</text> 
            }
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MenuDartUrl)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Owner)
        </td>
        <td>
            @Html.ActionLink("View", "Preview", "Menu", new { id = item.ID, url = @ViewBag.UrlPath + @item.MenuDartUrl + "/index.html" }, null) |
            @Html.ActionLink("Details", "Details", new { id=item.ID }) |
            @Html.ActionLink("Edit Menu", "Edit", "Menu", new { id = item.ID }, null) |
            @Html.ActionLink("Activate", "Activate", "Menu", new { id = item.ID }, null) |
            @Html.ActionLink("Deactivate", "Deactivate", "Menu", new { id = item.ID }, null) |
            @Html.ActionLink("Trash", "Delete", "Menu", new { id = item.ID }, null)
        </td>
    </tr>
}

</table>
