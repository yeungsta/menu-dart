@model MenuDart.Models.MenuBuilderViewModel

@{
    ViewBag.Title = "MenuDart Builder";
}

<h2>Welcome to the MenuDart Builder!</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Step 1</legend>
             
            @Html.HiddenFor(model => model.CurrentMenu.ID)

            <div class="editor-label">
                @Html.LabelFor(model => model.CurrentMenu.Name, "Restaurant's name")
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(model => model.CurrentMenu.Name, new { style = "width: 300px;" })
                @Html.ValidationMessageFor(model => model.CurrentMenu.Name)
            </div>

            <div class="editor-label">
                @Html.LabelFor(model => model.CurrentMenu.City, "City restaurant is in")
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(model => model.CurrentMenu.City, new { style = "width: 300px;" })
                @Html.ValidationMessageFor(model => model.CurrentMenu.City)
            </div>

            <div class="editor-label">
                @Html.LabelFor(model => model.CurrentMenu.Phone, "Restaurant's phone number")
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(model => model.CurrentMenu.Phone, new { style = "width: 300px;" })
                @Html.ValidationMessageFor(model => model.CurrentMenu.Phone)
            </div>

            <div class="editor-label">
                @Html.LabelFor(model => model.CurrentMenu.Website, "Restaurant's current website address (if you have one)")
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(model => model.CurrentMenu.Website, new { style = "width: 500px;" })
                @Html.ValidationMessageFor(model => model.CurrentMenu.Website)
            </div>

        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}