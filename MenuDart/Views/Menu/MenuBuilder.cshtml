@model MenuDart.Models.MenuBuilderViewModel

@{
    ViewBag.Title = "MenuBuilder";
}

<h2>Menu Builder</h2>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Menu Builder</legend>
             
            @Html.HiddenFor(model => model.CurrentMenu.ID)

            <div class="editor-label">
                @Html.LabelFor(model => model.CurrentMenu.Name, "Please enter your restaurant's name.")
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.CurrentMenu.Name)
                @Html.ValidationMessageFor(model => model.CurrentMenu.Name)
            </div>

            <div class="editor-label">
                @Html.LabelFor(model => model.CurrentMenu.City, "Enter the city your restaurant is in.")
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.CurrentMenu.City)
                @Html.ValidationMessageFor(model => model.CurrentMenu.City)
            </div>

            <div class="editor-label">
                @Html.LabelFor(model => model.CurrentMenu.Phone, "Enter your restaurant's phone number.")
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.CurrentMenu.Phone)
                @Html.ValidationMessageFor(model => model.CurrentMenu.Phone)
            </div>

            <div class="editor-label">
                @Html.LabelFor(model => model.CurrentMenu.Website, "Enter your restaurant's current website address, if you have one.")
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.CurrentMenu.Website)
                @Html.ValidationMessageFor(model => model.CurrentMenu.Website)
            </div>

        <p>
            <input type="submit" value="Create Menu!" />
        </p>
    </fieldset>
}