@model MenuDart.Models.Menu

@{
    ViewBag.Title = "Delete";
}

<h2>Remove @Model.Name Permanently?</h2>

<h3>Are you sure you want to remove the menu for @Model.Name? It will be permanently removed
and will NOT be able to be recovered.
<p>
Or maybe you just want to deactivate it? It won't be live, but won't be removed either.</h3>

@using (Html.BeginForm()) {
    <p>
        <input type="submit" value="Remove For Good" /> |
        @Html.ActionLink("Back to Dashboard", "Index", "Dashboard")
