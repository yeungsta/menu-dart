@using ActionMailer.Net.Mvc
@model MenuDart.Models.SendActivateEmailViewModel

@{
    ViewBag.Title = "Your Menu Is Activated!";
    Layout = "../Shared/EmailLayout.cshtml";
}

Hey there @Model.Email,
<p style="margin-bottom:1em">
@if (Model.MenusJustActivated.Count() > 1)
{
    <text>
    Hooray, you've just activated menu(s)! Your current active menu(s) are:
    <p style="margin-bottom:1em">
    </text>
    
    foreach (var item in Model.MenusJustActivated)
    {
         @item.MenuName
         <text> (</text>@item.MenuLink<text>) <br></text>
    }
    
    <text>
    <p style="margin-bottom:1em">
    Starting today, your monthly Menu Dart bill is only $@Model.MonthlyBill per month ($7 per menu). Please contact us if you have any questions.
    </text> 
}
else
{
    <text>
    Hooray, your @Model.MenusJustActivated[0].MenuName menu is now activated!
    <p style="margin-bottom:1em">
    Remember, the link to your menu is @Model.MenusJustActivated[0].MenuLink.
    <p style="margin-bottom:1em">
    </text>

    if (Model.AllActivatedMenus.Count() > 1)
    {
        <text>
        Your current active menu(s) are:
        <p style="margin-bottom:1em">
        </text>
            
        foreach (var item in Model.AllActivatedMenus)
        {
             @item.MenuName
             <text> (</text>@item.MenuLink<text>) <br></text>
        }
            
        <text>
        Starting today, your monthly Menu Dart bill is only $@Model.MonthlyBill per month ($7 per menu). Please contact us if you have any questions. 
        </text>
    }
    else
    {
        <text>
        Starting today, your monthly Menu Dart bill is only $@Model.MonthlyBill per month. Please contact us if you have any questions.
        </text>       
    }
}
<p style="margin-bottom:1em">
<br />
Happy to serve you,
<br><br />
Your Friends at Menu Dart
